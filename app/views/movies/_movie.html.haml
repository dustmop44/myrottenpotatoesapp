%tr{:class => ('adult' unless movie.rating =~ /^G|PG$/)}
  %td= index + 1
  %td= movie.title
  %td= movie.rating
  %td= movie.release_date
  %td= Movie.review_average(movie).to_s + "/5.0"
  %td= link_to "More about #{movie.title}", movie_path(movie), class: 'movie_info'
  %td= (link_to "Edit", edit_movie_path(movie)) + "   " + (link_to "Delete", movie_path(movie), :method => :delete, :data => {:confirm => 'Are you sure?'})
